<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="100dp"
	android:background="@drawable/list"
	android:layout_marginBottom="10dp"
	android:layout_marginTop="10dp"
	android:layout_marginStart=
	>

	<TextView
		android:id="@+id/tvTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="130dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:text="Kecerdasan Buatan S1-IF13"
		android:textColor="#CD000000"
		android:fontFamily="@font/msj"
		android:textSize="18sp"
		app:layout_constraintBottom_toTopOf="@id/tvDate"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>

	<TextView
		android:id="@+id/tvRoomNumber"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Ruang 5.2.3"
		android:ellipsize="end"
		android:layout_marginTop="5dp"
		android:maxLines="1"
		android:fontFamily="@font/msj"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="10dp"
		app:layout_constraintTop_toBottomOf="@id/tvTitle"
		app:layout_constraintEnd_toEndOf="parent"

		/>

	<TextView
		android:id="@+id/tvDate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="120dp"
		android:layout_marginStart="10dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:text="25 Desember 2020"
		android:fontFamily="@font/msj"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tvTitle"
		/>

	<TextView
		android:id="@+id/tvStatus"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/reject"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp"
		android:maxLines="1"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/tvRejectedMsg"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		android:layout_marginBottom="3dp"
		android:layout_marginEnd="10dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:text="Rejected Message"
		android:textColor="@android:color/holo_red_light"
		android:textSize="12sp"
		android:visibility="visible"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/tvStatus"
		app:layout_constraintTop_toBottomOf="@+id/tvDate"
		/>

	<TextView
		android:id="@+id/tvTime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="07:00 - 08:40"
		android:ellipsize="end"
		android:maxLines="1"
		android:textColor="@android:color/white"
		android:background="@drawable/btn_login"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:textSize="15sp"
		android:fontFamily="@font/msj"
		android:layout_marginEnd="10dp"
		android:layout_marginTop="15dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>
