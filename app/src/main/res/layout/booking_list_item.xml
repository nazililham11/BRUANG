<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="100dp"
	android:orientation="horizontal"
	>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

		<View
			android:id="@+id/indicatorView"
			android:layout_width="10dp"
			android:layout_height="match_parent"
			android:background="@android:color/darker_gray"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			/>

		<TextView
			android:id="@+id/tvTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:maxLines="1"
			android:textSize="18dp"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="130dp"
			android:text="Kecerdasan Buatan Kelas IF 13"
			app:layout_constraintStart_toEndOf="@id/indicatorView"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@id/tvDate"
			/>

		<TextView
			android:id="@+id/tvRoomNumber"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ruang 5.2.3"
			android:ellipsize="end"
			android:layout_marginTop="5dp"
			android:maxLines="1"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="10dp"
			app:layout_constraintTop_toBottomOf="@id/tvTitle"
			app:layout_constraintEnd_toEndOf="parent"

			/>

		<TextView
			android:id="@+id/tvDate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="120dp"
			android:ellipsize="end"
			android:maxLines="1"
			android:layout_marginTop="5dp"
			android:text="25 Desember 2020"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/indicatorView"
			app:layout_constraintTop_toBottomOf="@id/tvTitle"
			/>

		<TextView
			android:id="@+id/tvStatus"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Accepted"
			android:maxLines="1"
			android:textColor="@android:color/white"
			android:background="@android:color/darker_gray"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:layout_marginRight="10dp"
			app:layout_constraintStart_toEndOf="@id/indicatorView"
			app:layout_constraintBottom_toBottomOf="parent"
			/>

		<TextView
			android:id="@+id/tvRejectedMsg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Rejected Message"
			android:textColor="@android:color/holo_red_light"
			android:maxLines="1"
			android:visibility="gone"
			android:textSize="12dp"
			android:ellipsize="end"
			android:layout_marginLeft="5dp"
			android:layout_marginBottom="3dp"
			app:layout_constraintStart_toEndOf="@id/tvStatus"
			app:layout_constraintBottom_toBottomOf="parent"
			/>

		<TextView
			android:id="@+id/tvTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="07:00 - 08:40"
			android:ellipsize="end"
			android:maxLines="1"
			android:textColor="@android:color/white"
			android:background="@android:color/darker_gray"
			android:paddingLeft="5dp"
			android:textSize="18dp"
			android:paddingRight="5dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="5dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@android:color/darker_gray"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>

	</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
